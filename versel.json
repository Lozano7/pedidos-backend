{
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_srt",
    "PORT": "@port"
  },
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "https://pedidos-backend-bbln.vercel.app"
      },
      "preflight": true,
      "allowedHeaders": [
        "Content-Type",
        "Authorization",
        "credentials",
        "X-Requested-With",
        "Accept",
        "Origin",
        "cors",
        "cookie",
        "Access-Control-Allow-Headers",
        "Access-Control-Allow-Origin",
        "Access-Control-Allow-Credentials"
      ],
      "exposedHeaders": [
        "Authorization",
        "credentials",
        "Access-Control-Allow-Headers",
        "Access-Control-Allow-Origin",
        "Access-Control-Allow-Credentials",
        "Content-Type",
        "X-Requested-With",
        "Accept",
        "Origin",
        "cors"
      ]
    }
  ]
}
